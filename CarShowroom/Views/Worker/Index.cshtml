@model IEnumerable<CarShowroom.Models.Worker>

@{
    ViewBag.Title = "Lista";
}

<h2>Lista</h2>

<p>
    @Html.ActionLink("Dodaj", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Position)
        </th>
        <th>
            @Html.ActionLink("Nazwisko", "Index", new { sort = "lastname" })
        </th>
        <th>
            @Html.ActionLink("Imię", "Index", new { sort = "firstname" })
        </th>
        <th>
            @Html.ActionLink("CNUM", "Index", new { sort = "cnum" })
        </th>
        <th>
            @Html.ActionLink("Miasto", "Index", new { sort = "city" })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Street)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StreetNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Position.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pesel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Street)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StreetNumber)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.WorkerId }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.WorkerId }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.WorkerId })
        </td>
    </tr>
}

</table>
