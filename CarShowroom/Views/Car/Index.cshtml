@model IEnumerable<CarShowroom.Models.Car>

@{
    ViewBag.Title = "Lista";
}

<h2>Lista</h2>

<p>
    @Html.ActionLink("Dodaj", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Marka", "Index", new { sort = "brand" })
        </th>
        <th>
            @Html.ActionLink("Model", "Index", new { sort = "model" })
        </th>
        <th>
            @Html.ActionLink("Cena", "Index", new { sort = "price" })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsNew)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Brand)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsNew)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.CarId }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.CarId }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.CarId })
        </td>
    </tr>
}

</table>
